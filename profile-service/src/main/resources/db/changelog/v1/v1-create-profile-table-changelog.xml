<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-1" author="Artem Meshcheryakov">

        <createTable tableName="profile" schemaName="profile_service">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(100)"/>
            <column name="last_name" type="varchar(100)"/>
            <column name="middle_name" type="varchar(100)"/>
            <column name="bank_id" type="uuid"/>
            <column name="date_of_birth" type="date"/>
            <column name="birth_place" type="varchar(100)"/>
            <column name="email" type="varchar(100)"/>
            <column name="passport_number" type="varchar(25)"/>
            <column name="phone_number" type="varchar(15)"/>
            <column name="registration_address" type="varchar(255)"/>
            <column name="residence_address" type="varchar(255)"/>
        </createTable>
        <rollback>
            <dropTable tableName="profile"/>
        </rollback>
    </changeSet>

    <changeSet id="v1-2" author="Artem Meshcheriakov">
        <addColumn tableName="profile" schemaName="profile_service">
            <column name="username" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>