<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


    <changeSet id="v1-1" author="Artem Meshcheryakov">
        <createTable tableName="product">
            <column name="end_date" type="timestamp(6)"/>
            <column name="start_date" type="timestamp(6)"/>
            <column name="author" type="uuid"/>
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="description" type="varchar(255)"/>
            <column name="name" type="varchar(255)"/>
            <column name="type" type="varchar(255)">
                <constraints checkConstraint="type in ('LOAN','CARD')"/>
            </column>
            <column name="tariff" type="jsonb"/>
        </createTable>
        <rollback>
            <dropTable tableName="product"/>
        </rollback>
    </changeSet>
</databaseChangeLog>