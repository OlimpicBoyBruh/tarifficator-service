<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="v1-1" author="Meshcheriakov Artem">
        <createSequence sequenceName="revinfo_seq" startValue="1" incrementBy="50"/>
    </changeSet>

    <changeSet id="v1-2" author="Meshcheriakov Artem">
        <createTable tableName="product_aud">
            <column name="revtype" type="smallint"/>
            <column name="end_date" type="timestamp(6)"/>
            <column name="rev" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="start_date" type="timestamp(6)"/>
            <column name="author" type="uuid"/>
            <column name="id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(255)"/>
            <column name="name" type="varchar(255)"/>
            <column name="type" type="varchar(255)">
                <constraints checkConstraint="type in ('LOAN','CARD')"/>
            </column>
            <column name="tariff" type="jsonb"/>
        </createTable>
        <addPrimaryKey columnNames="rev, id" tableName="product_aud" constraintName="pk_product_aud"/>
    </changeSet>

    <changeSet id="v1-3" author="Meshcheriakov Artem">
        <createTable tableName="revinfo">
            <column name="rev" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="revtstmp" type="bigint"/>
        </createTable>
        <addPrimaryKey columnNames="rev" tableName="revinfo" constraintName="pk_revinfo"/>
    </changeSet>

    <changeSet id="v1-4" author="your_name">
        <addForeignKeyConstraint
                baseTableName="product_aud"
                baseColumnNames="rev"
                referencedTableName="revinfo"
                referencedColumnNames="rev"
                constraintName="fk_aud_revinfo"/>
    </changeSet>

</databaseChangeLog>
