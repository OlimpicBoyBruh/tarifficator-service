<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-1" author="Artem Meshcheryakov">

        <createTable tableName="user_password" schemaName="profile_service">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="user_password"/>
        </rollback>
    </changeSet>

    <changeSet id="v1-2" author="Artem Meshcheriakov">
        <preConditions onFail="MARK_RAN">
            <tableExists tableName="user_password"/>
            <tableExists tableName="profile"/>
        </preConditions>

        <addForeignKeyConstraint
                constraintName="user_password_profile_fk"
                baseTableName="user_password"
                baseColumnNames="id"
                referencedTableName="profile"
                referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>